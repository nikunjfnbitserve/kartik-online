<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".activities.OrderSuccessPage">

    <TextView
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="48dp"
        android:text="Choose Payment mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/ordsucc_cod_rad"
            android:padding="4dp"
            android:text="Cash On Delivery (COD)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/ordsucc_payn_rad"
            android:padding="4dp"
            android:text="Pay Now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/ordsucc_btn"
        android:text="# Order Successful"
        android:textColor="#ffffff"
        android:padding="4dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:background="#423B3B"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
   <TextView
       android:padding="8dp"
       android:textSize="18sp"
       android:gravity="center"
       android:text="Your Order is Received to us Confirmation message will be sent to your notification. Thanks for Shopping"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:background="@drawable/kartik_online_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>