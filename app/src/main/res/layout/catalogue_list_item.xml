<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:padding="2dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <GridLayout
                android:padding="8dp"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ad_catbrand_img1"
                    android:padding="2dp"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ad_catbrand_img2"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_circle_black_24dp" />
                <ImageView
                    android:id="@+id/ad_catbrand_img3"
                    android:padding="2dp"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ad_catbrand_img4"
                    android:padding="2dp"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </GridLayout>

            <LinearLayout
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_catalog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/g_b_products"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_preview"
                    android:text="Preview"
                    android:background="@drawable/orderlist_delete_button_bg"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

                <Button
                    android:id="@+id/btn_edit"
                    android:text="Edit"
                    android:background="@drawable/orderlist_view_button_bg"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="25dp" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch_published"
                android:padding="8dp"
                android:text="Published "
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>