<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_prod_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/pb_image_upload"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_prod_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoe 1"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_prod_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 227"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_prod_disc_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 215"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@+id/tv_prod_disc_price"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_prod_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8x2"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_prod_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Men"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_prod_sole_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="EVA Sole"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_prod_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
            <TextView
                android:id="@+id/tv_prod_desc"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:text="product details are described here as per the requirements"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>