<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:gravity="center"
    >
    <ImageView
        android:src="@drawable/kartik_online_logo"
        android:padding="8dp"
        android:layout_gravity="center|bottom"
        android:layout_width="240dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:text=" Sign Up With Social Account"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:text="Facebook"
        android:drawableLeft="@drawable/fb"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:padding="8dp"
        android:background="@drawable/buttonbackground"
        android:layout_width="240dp"
        android:layout_height="48dp"/>
    <com.google.android.gms.common.SignInButton
        android:text="Google"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:background="@drawable/buttonbackground"
        android:layout_width="240dp"
        android:layout_height="48dp"/>
    <View
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@android:color/background_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:padding="8dp">

        <TextView
            android:layout_gravity="center"
            android:text=" Sign Up With Email"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/r_un_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USER NAME"
            android:padding="8dp" />

        <EditText
            android:id="@+id/r_email_et"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:hint="EMAIL ADDRESS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <EditText
            android:id="@+id/r_ph_et"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="PASSWORD"
            android:padding="8dp" />

        <EditText
            android:id="@+id/r_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:padding="8dp" />

        <CheckBox
            android:layout_marginTop="18dp"
            android:id="@+id/r_check"
            android:gravity="center"
            android:text="By Signing in you agree the terms and condition and privacy policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/r_reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="#2D2D2D"
            android:text="SIGN IN"
            android:textColor="#fff"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>