<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".activities.CataloguenameNotes">
    <TextView
        android:text="More Product Image"
        android:padding="4dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:padding="8dp"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/catname_pimg1"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/catname_pimg2"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle_black_24dp" />
        <ImageView
            android:id="@+id/catname_pimg3"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/catname_pimg4"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </GridLayout>
    <TextView
        android:text="More Product Video"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/catname_video"
        android:padding="4dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Color Available"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:padding="8dp"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/catname_color1"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:id="@+id/catname_color2"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle_black_24dp" />
        <ImageView

            android:id="@+id/catname_color3"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:id="@+id/catname_color4"
            android:padding="2dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </GridLayout>

    <TextView
        android:text="Add Note"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/catname_yournotes"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/background_et"
        android:layout_marginTop="18dp"
        android:hint="Your notes.."
        android:padding="2dp" />


</LinearLayout>